        "@mdx-js/react": "^1.6.22",
        "@next/mdx": "^11.1.2",
        "next": "^11.1.2",
        "prism-react-renderer": "^1.2.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@types/linkifyjs": "^2.1.4",
        "@types/loadable__component": "^5.13.3",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "puppeteer": "^10.4.0",
        "prettier": "^2.4.0",
        "sass": "^1.39.2",
        "serve": "^12.0.1",
        "typescript": "^4.4.3",
        "ts-loader": "^8.1.0",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "tslint-react": "^5.0.0"
    }
