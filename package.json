{
    "name": "csslayout",
    "scripts": {
        "copy": "rm -rf dist && mkdir dist && cp robots.txt dist && cp sitemap.xml dist",
        "dev": "npm run copy && webpack --mode development",
        "dev-server": "npm run copy && webpack-dev-server",
        "build": "npm run copy && webpack --mode production && npm run export",
        "export": "react-snap",
        "deploy": "npm run build && netlify deploy --dir=dist --prod",
        "analyse": "NODE_ENV=analyse webpack --config webpack.config.js -p"
    },
    "dependencies": {
        "@loadable/component": "^5.10.3",
        "highlight.js": "^9.16.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router-dom": "^5.1.2",
        "react-snap": "^1.23.0"
    },
    "devDependencies": {
        "@babel/core": "^7.7.4",
        "@babel/preset-env": "^7.7.4",
        "@babel/preset-react": "^7.7.4",
        "@loadable/babel-plugin": "^5.10.3",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.2.0",
        "html-webpack-plugin": "^3.2.0",
        "style-loader": "^1.0.0",
        "webpack": "^4.41.2",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0"
    },
    "reactSnap": {
        "source": "dist",
        "minifyHtml": {
            "collapseWhitespace": false,
            "removeComments": false
        }
    }
}
